<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgPlato"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="146dp"
        android:layout_height="21dp"
        android:layout_below="@+id/imgPlato"
        android:layout_alignEnd="@+id/imgPlato"
        android:layout_alignRight="@+id/imgPlato"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Nombre Plato"
        android:textAlignment="center"
        android:textColor="#0e11d1"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombre"
        android:layout_alignEnd="@+id/txtNombre"
        android:layout_alignRight="@+id/txtNombre"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:text="Precio"
        android:textAlignment="center"
        android:textColor="#ce1309"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>